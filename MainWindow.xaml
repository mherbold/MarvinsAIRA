                    <Label Content="❤️❤️❤️ A huge thank you to everybody who supported MAIRA! ❤️❤️❤️" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="0,15,0,0" />
                    <TextBox x:Name="Supporters_TextBox" Text="Testing" IsReadOnly="True" FontWeight="Medium" TextWrapping="Wrap" IsUndoEnabled="False" Height="200" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,5,0,0" Padding="15,15,30,15" FontSize="18"/>
                </StackPanel>
            </TabItem>
        </TabControl>
        <StatusBar Padding="10,0,0,0">
            <StatusBarItem x:Name="Connection_StatusBarItem" Content="iRacing Simulator is Not Running" Foreground="Gray"/>
            <Separator Margin="8,2,8,2" />
            <StatusBarItem x:Name="CurrentCar_StatusBarItem" Content="No Car" Foreground="Gray"/>
            <Separator Margin="8,2,8,2" />
            <StatusBarItem x:Name="CurrentTrack_StatusBarItem" Content="No Track" Foreground="Gray"/>
            <Separator Margin="8,2,8,2" />
            <StatusBarItem x:Name="CurrentTrackCondition_StatusBarItem" Content="" Foreground="Gray"/>
            <Separator x:Name="UpdateInfo_Separator" Margin="8,2,8,2" Visibility="Collapsed"/>
            <StatusBarItem x:Name="UpdateInfo_StatusBarItem" Content="" Visibility="Collapsed"/>
            <StatusBarItem HorizontalAlignment="Right" Padding="0,0,0,0">
                <ui:ToggleSwitch x:Name="Advanced_ToggleSwitch" OffContent="Advanced" OnContent="Advanced" Toggled="Advanced_ToggleSwitch_Toggled" IsOn="{Binding Advanced}" Width="120" RenderTransformOrigin="0.5,0.5" >
                    <ui:ToggleSwitch.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </ui:ToggleSwitch.RenderTransform>
                </ui:ToggleSwitch>
            </StatusBarItem>
        </StatusBar>
        <tb:TaskbarIcon x:Name="MARIA_TaskbarIcon" IconSource="/icon.ico" ToolTipText="Marvin's Awesome iRacing App" TrayLeftMouseDown="TaskbarIcon_TrayLeftMouseDown">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="ShowApp_MenuItem" Header="Show Marvin's Awesome iRacing App" Click="ShowApp_MenuItem_Click" />
                    <MenuItem x:Name="ExitApp_MenuItem" Header="Exit the App" Click="ExitApp_MenuItem_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </StackPanel>

</Window>
